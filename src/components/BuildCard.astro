---
const { name, image, description, weapon, set, background } = Astro.props;
---

<div
  class="rounded-lg shadow-lg hover:shadow-xl transition-shadow w-full max-w-4xl text-white flex flex-col md:flex-row"
  style={`background-image: url(${background}); background-size: cover; background-position: center;`}
>
  <!-- Imagen del Personaje -->
  <div class="w-full md:w-3/4 flex items-center">
    <img
      src={image}
      alt={`Build ${name}`}
      class="w-full h-48 md:h-full rounded-t-lg md:rounded-l-lg object-cover"
    />
  </div>

  <!-- InformaciÃ³n del Personaje -->
  <div
    class="w-full md:w-1/2 p-6 flex flex-col justify-between rounded-b-lg md:rounded-r-lg bg-opacity-70"
    style="background-color: rgba(26, 26, 26, 0.9);"
  >
    <div>
      <h3 class="text-2xl md:text-4xl font-bold text-blue-400">{name}</h3>
      <p class="text-gray-300 mt-4 text-base md:text-lg">{description}</p>
      <div class="mt-6">
        <h4
          class="text-lg md:text-xl font-semibold text-blue-400 flex items-center space-x-2"
        >
          Arma
          <img
            src="/images/builds/arma.png"
            alt="Arma"
            class="h-6 md:h-8 w-6 md:w-8"
          />
        </h4>
        <p class="text-gray-300 text-sm md:text-lg">{weapon}</p>
      </div>
      <div class="mt-4">
        <h4
          class="text-lg md:text-xl font-semibold text-blue-400 flex items-center space-x-2"
        >
          Artefacto
          <img
            src="/images/builds/artefacto.png"
            alt="Artefacto"
            class="h-6 md:h-8 w-6 md:w-8"
          />
        </h4>
        <p class="text-gray-300 text-sm md:text-lg flex items-center space-x-2">
          {set}
        </p>
      </div>
    </div>
  </div>
</div>
