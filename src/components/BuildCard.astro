---
// BuildCard.astro
const { name, image, description, weapon, set, background } = Astro.props;
---

<div
  class="rounded-lg shadow-lg hover:shadow-xl transition-shadow w-full max-w-4xl text-white flex"
  style={`background-image: url(${background}); background-size: cover; background-position: center;`}
>
  <!-- Imagen del Personaje a la Izquierda -->
  <div class="w-3/4 flex items-center">
    <img
      src={image}
      alt={`Build ${name}`}
      class="w-full h-full rounded-l-lg object-cover"
    />
  </div>

  <!-- InformaciÃ³n del Personaje a la Derecha -->
  <div
    class="w-1/2 p-6 flex flex-col justify-between rounded-r-lg bg-opacity-70"
    style="background-color: rgba(26, 26, 26, 0.9);"
  >
    <div>
      <h3 class="text-4xl font-bold text-blue-400">{name}</h3>
      <p class="text-gray-300 mt-4 text-lg">{description}</p>
      <div class="mt-6">
        <h4
          class="text-xl font-semibold text-blue-400 flex items-center space-x-2"
        >
          Arma
          <img src="/images/builds/arma.png" alt="Arma" class="h-8 w-8" />
        </h4>

        <p class="text-gray-300 text-lg">{weapon}</p>
      </div>
      <div class="mt-4">
        <h4
          class="text-xl font-semibold text-blue-400 flex items-center space-x-2"
        >
          Artefacto
          <img
            src="/images/builds/artefacto.png"
            alt="Artefacto"
            class="h-8 w-8"
          />
        </h4>
        <p class="text-gray-300 text-lg flex items-center space-x-2">{set}</p>
      </div>
    </div>
  </div>
</div>
