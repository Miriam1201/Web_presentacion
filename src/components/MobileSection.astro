---
import "swiper/css";
import "swiper/css/navigation";
import "photoswipe/style.css";
---

<section id="mobile-view-carousel" class="flex flex-col items-center p-8">
  <h2 class="text-3xl font-bold text-blue-600 mb-6">Vista en Móvil</h2>

  <div class="swiper w-full max-w-5xl">
    <div class="swiper-wrapper" id="my-slider">
      <!-- Slide 1 -->
      <a
        class="swiper-slide"
        href="/images/moviles/armaD.jpg"
        data-pswp-width="800"
        data-pswp-height="800"
        target="_blank"
        data-cropped="true"
      >
        <div
          class="bg-white p-4 rounded-lg shadow-md w-[90%] sm:w-[300px] mx-auto"
        >
          <div class="text-black text-center py-2 mb-4 font-bold">
            Detalle Arma
          </div>
          <div
            class="border-4 border-black rounded-lg overflow-hidden h-[300px] sm:h-[500px]"
          >
            <img
              src="/images/moviles/armaD.jpg"
              alt="Anemo"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </a>
      <!-- Slide 2 -->
      <a
        class="swiper-slide"
        href="/images/moviles/armaL.jpg"
        data-pswp-width="800"
        data-pswp-height="800"
        target="_blank"
        data-cropped="true"
      >
        <div
          class="bg-white p-4 rounded-lg shadow-md w-[90%] sm:w-[300px] mx-auto"
        >
          <div class="text-black text-center py-2 mb-4 font-bold">
            Lista Armas
          </div>
          <div
            class="border-4 border-black rounded-lg overflow-hidden h-[300px] sm:h-[500px]"
          >
            <img
              src="/images/moviles/armaL.jpg"
              alt="Cryo"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </a>
      <!-- Slide 3 -->
      <a
        class="swiper-slide"
        href="/images/moviles/artefactoD.jpg"
        data-pswp-width="800"
        data-pswp-height="800"
        target="_blank"
        data-cropped="true"
      >
        <div
          class="bg-white p-4 rounded-lg shadow-md w-[90%] sm:w-[300px] mx-auto"
        >
          <div class="text-black text-center py-2 mb-4 font-bold">
            Detalle Artefacto
          </div>
          <div
            class="border-4 border-black rounded-lg overflow-hidden h-[300px] sm:h-[500px]"
          >
            <img
              src="/images/moviles/artefactoD.jpg"
              alt="Dendro"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </a>
      <!-- Slide 4 -->
      <a
        class="swiper-slide"
        href="/images/moviles/artefactoL.jpg"
        data-pswp-width="800"
        data-pswp-height="800"
        target="_blank"
        data-cropped="true"
      >
        <div
          class="bg-white p-4 rounded-lg shadow-md w-[90%] sm:w-[300px] mx-auto"
        >
          <div class="text-black text-center py-2 mb-4 font-bold">
            Lista Artefactos
          </div>
          <div
            class="border-4 border-black rounded-lg overflow-hidden h-[300px] sm:h-[500px]"
          >
            <img
              src="/images/moviles/artefactoL.jpg"
              alt="Electro"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </a>
      <!-- Slide 5 -->
      <a
        class="swiper-slide"
        href="/images/moviles/personaje.jpg"
        data-pswp-width="800"
        data-pswp-height="800"
        target="_blank"
        data-cropped="true"
      >
        <div
          class="bg-white p-4 rounded-lg shadow-md w-[90%] sm:w-[300px] mx-auto"
