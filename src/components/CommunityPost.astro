---
const {
  username,
  profile_image,
  date,
  game,
  content,
  images,
  tags,
  likes,
  comments,
  shares,
} = Astro.props as {
  username: string;
  profile_image: string;
  date: string;
  game: string;
  content: string;
  images: string[];
  tags: string[];
  likes: number;
  comments: number;
  shares: number;
};
---

<div class="bg-white p-6 rounded-lg shadow-md">
  <!-- Encabezado del Post -->
  <div class="flex items-center space-x-4 mb-4">
    <img src={profile_image} alt={username} class="w-12 h-12 rounded-full" />
    <div>
      <h3 class="font-bold text-lg text-gray-800">{username}</h3>
      <p class="text-gray-500 text-sm">{date} - {game}</p>
    </div>
  </div>

  <!-- Contenido del Post -->
  <p class="text-gray-700 mb-4">{content}</p>

  <!-- Imágenes del Post -->
  {
    images.length > 0 && (
      <div class="grid grid-cols-2 gap-2 mb-4">
        {images.map((img: string, index: number) => (
          <img src={img} alt={`Imagen ${index + 1}`} class="rounded-lg" />
        ))}
      </div>
    )
  }

  <!-- Tags del Post -->
  {
    tags.length > 0 && (
      <div class="mb-4">
        {tags.map((tag: string) => (
          <span class="inline-block bg-blue-500 text-white py-1 px-3 rounded-full text-xs mr-2">
            #{tag}
          </span>
        ))}
      </div>
    )
  }

  <!-- Acciones del Post -->
  <div class="flex items-center space-x-6 text-gray-500 text-sm">
    <span>👍 {likes}</span>
    <span>💬 {comments}</span>
    <span>🔄 {shares} mil</span>
  </div>
</div>
