---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/global.css" />
    <script
      src="https://kit.fontawesome.com/a393bfae73.js"
      crossorigin="anonymous"></script>
  </head>
  <body class="bg-background text-white font-main">
    <slot />
  </body>
</html>
